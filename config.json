{
  "server": [
    {
      "listen": "0.0.0.0:12345"
    }
  ],
  "client": [
    {
      "hostname": "peer2.lan",
      "listen": "127.0.0.1:8119",
      "dial": "peer2.example.com:12345",
      "proxy": [
        {
          "listen": ":5201",
          "forward": "gateway.peer2.lan:5201"
        }
      ]
    }
  ],
  "proxy":{
    "hostname":"peer1.lan",
    "listen":"0.0.0.0:8080",
    "hostroutes":{
      "a.peer2.lan":"peer2.lan",
      "b.peer2.lan":"peer2.lan",
      "c.peer2.lan":"peer2.lan"
    },
    "default":"peer2.example.com:12345"
  },
  "cert": "peer1-cert.pem",
  "key": "peer1-key.pem",
  "authcerts": [
    "peer2-cert.pem"
  ]
}